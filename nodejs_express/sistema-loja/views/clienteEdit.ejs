<%- include ('partials/navbar.ejs')%>
<%- include ('partials/header.ejs')%>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Alterar Cliente</h1>
            <hr>
            <form method="POST" action="/clientes/update/<%= cliente.id%>">
                <label>Nome do cliente:</label>
                <input type="text" name="nome" id="nome" value="<%= cliente.nome%>" placeholder="Insira o nome do cliente" class="form-control" required>
                <label>Endereço do cliente:</label>
                <input type="text" name="endereco" id="endereco" value="<%= cliente.endereco%>"  placeholder="Insira o endereço do cliente" class="form-control" required>
                <label>Cpf do cliente:</label>
                <input type="text" name="cpf" id="cpf" value="<%= cliente.cpf%>"  placeholder="Insira o cpf do cliente" class="form-control" required>                           
                <br>
                <input type="hidden" name="id" value="<%= cliente.id %>">
                <input type="submit" class="btn btn-warning" value="Alterar" onclick="return confirm('Confirma as alterações?')">
            </form>
            <hr>
        </div>
    </div>
</div>
<br>

<%- include ('partials/footer.ejs')%>